{
  "manifest_version": 2,
  "name": "Rename Tab",
  "version": "1.0",
  "description": "This extension allows you to rename browser tab titles.",
  "icons": {
    "128": "images/rename.png"
  },
  "browser_action": {
    "default_icon": "images/rename.png",
    "default_title": "Change the current tab's title.",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "background": {
    "scripts": [
      "scripts/rename.js"
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  }
}
